doctype html
html
    head
        title='CS460PA1'
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        block content
            h1="Users Insert"
            .main.container
                .row
                    .col-md-6.col-md-offset-3
                        h1.display-4.m-b-2 Please enter all values

                        a(class='button' href='/') Return to Home
                            br

                        // register form
                        form(method='POST' action='/usinsert')
                            div.form-group
                                label(for='name') User Name:
                                input#name.form-control(type='text', placeholder='user name' name='name')
                            div.form-group
                                label(for='id') User ID:
                                input#id.form-control(type='text', placeholder='user id' name='id')
                            div.form-group
                                label(for='stars') Review Count:
                                input#stars.form-control(type='text', placeholder='0' name='stars')
                            button.btn.btn-primary(type='submit') Submit